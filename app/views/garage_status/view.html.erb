<div class="container">
  <div class="row">
    <div class="col-sm-6 text-center">
      <%- if @minder.door_open? -%>
        <h3>Door is open</h2>
      <%- else -%>
        <h3>Door is closed</h2>
      <%- end -%>
      <%- if @last_open -%>
        <hr />
        <h3>Door Last Opened</h3>
        <p><%= @last_open.strftime('%Y-%m-%d %H:%M:%S') %></p>
      <%- end -%>
      <%- if @last_closed -%>
        <hr />
        <h3>Door Last Closed</h3>
        <p><%= @last_closed.strftime('%Y-%m-%d %H:%M:%S') %></p>
      <%- end -%>
    </div>
    <div class="col-sm-6 text-center">
      <h3>Timer</h3>
      <div class="row">
        <div class="col-4 text-center <%= timer_class 0 %>">
          <%= @minder.timer_settings[0] %> mins
        </div>
        <div class="col-4 text-center <%= timer_class 1 %>">
          <%= @minder.timer_settings[1] %> mins
        </div>
        <div class="col-4 text-center <%= timer_class 2 %>">
          <%= @minder.timer_settings[2] %> mins
        </div>
      </div>
    </div>
  </div>
</div>
